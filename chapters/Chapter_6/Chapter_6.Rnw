	\end{solution}  
	
	\begin{exercise} % 3
	
	  An auditor has come to audit the books of your non-profit organization.  She randomly chooses one of the first ten entries of the ledger.  This entry and every tenth entry is selected.  This method is called
		  \begin{enumerate}
		  \samepage
		  \item cluster sampling
		  \samepage
		  \item simple random sampling
		  \samepage
		  \item systemic random sampling
		  \samepage
		  \item stratified random sampling
		  \end{enumerate}
		   \vspace{5mm}
    \framebox[5cm][l]{ Answer: }
    
	\end{exercise}
	\vspace{2mm}
	\begin{solution}
	  This method is called systemic random sampling.
	\end{solution}  
	
	\begin{exercise} % 4
	
	  Height of men example: Mean = 69.1 inches and SD = 2.9 inches.  Given a sample of 10 men.  What proportion will exceed 72.0 inches?
		  \begin{enumerate}
		  \samepage
		  \item 0.08\%
		  \samepage
		  \item 5.8\%
		  \samepage
		  \item 8\%
		  \samepage
		  \item 15.87\%
		  \samepage
		  \item 49.92\%
		  \end{enumerate}
		   \vspace{5mm}
    \framebox[5cm][l]{ Answer: }
    
	\end{exercise}
	\vspace{2mm}
	\begin{solution}
	  What proportion will exceed 72.0 inches?  
	  
	  $SE = \frac{SD}{\sqrt{n}} = \frac{2.9}{\sqrt{10}} = 0.9171$  \\
	  $Z = \frac{(X - \mu)}{SE} $ \\
	  $Z = \frac{(72.0 - 69.1)}{0.9171} = 3.1623$ \\
	  $P[ Z > 3.1623] = 0.0008$
	  
	\end{solution}
	
	\begin{exercise} % 5
	
	  The national norm of a science test for tenth graders has a mean of 210 and a standard deviation of 28.  A random sample of 40 tenth graders were selected.  What is the chance that this group will average over 220?
		  \begin{enumerate}
		  \item 0.0
		  \item 0.0119
		  \item 0.3605
		  \item 0.9881
		  \end{enumerate}	
		   \vspace{5mm}
    \framebox[5cm][l]{ Answer: }
    
	\end{exercise}
	\vspace{2mm}
	\begin{solution}
	  What is the chance that this group will average over 220?
	  
	  $SE = \frac{SD}{\sqrt{n}} = \frac{28}{\sqrt{40}} = 4.4272$ \\
	  $Z = \frac{(X - \mu)}{SE}$ \\
	  $Z = \frac{(220 - 210)}{4.4272} = 2.2588$ \\
	  $P[ Z > 2.2588] = 0.0119$
	  
	\end{solution}  
\end{exercises}



